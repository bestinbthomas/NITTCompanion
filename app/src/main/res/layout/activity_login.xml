<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/white">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/signin"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/Welcome"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginEnd="16dp"
              android:layout_marginStart="16dp"
              android:text="@string/sign_in_text"
              android:textAllCaps="false"
              android:id="@+id/LoginBtn"
              android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="@+id/imageView"
              android:gravity="center_horizontal|center_vertical"
              android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
              android:textSize="18sp" style="@style/MyTextButton"/>
    <TextView
            android:text="@string/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="129dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold" android:textColor="@color/primaryDarkColor" android:fontFamily="@font/slackey"
            android:includeFontPadding="false" android:textSize="36sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>